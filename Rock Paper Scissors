import java.util.Random;
import java.util.Scanner;
public class RockPaperScissors {
    public static void main(String[] args) {
        String [] rps = {"r","p","s"};
        String computerMove = rps[new Random().nextInt(rps.length)];

        Scanner scanner = new Scanner(System.in);
        String playerMove = scanner.nextLine();
        while(true){
            System.out.println("Please choose your next move (rock, paper, scissors)");
            if (playerMove.equals("rock")  || 
            playerMove.equals("Rock") || 
            playerMove.equals("paper") || 
            playerMove.equals("paper") || 
            playerMove.equals("Scissors") || 
            playerMove.equals("scissors")) {
                break;
            }
            System.out.println(playerMove + "Not a valid move!");
        }

        System.out.println("Computer played: " + computerMove);
        if(playerMove.equals(computerMove)) {
            System.out.println("The game was a tie!");
        }else if(playerMove.equals("Rock || rock")){
            if(computerMove.equals("Paper || paper")) {
                System.out.println("You Lose!");
            }else if(computerMove.equals("Scissors || scissors")) {
                System.out.println("You Win!");
            }

        }
        else if(playerMove.equals("Paper || paper")){
            if(computerMove.equals("Rock || rock")) {
                System.out.println("You Lose!");
            }else if(computerMove.equals("Scissors || scissors")) {
                System.out.println("You Win!");
            }
            else if(playerMove.equals("Scissors || scissors")){
                if(computerMove.equals("Paper || paper")) {
                    System.out.println("You Win!");
                }else if(computerMove.equals("Rock || rock")) {
                    System.out.println("You Lose!");
                }

            }

        }
    }
}
